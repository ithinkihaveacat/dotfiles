{
  "name": "socrates",
  "version": "1.0.0",
  "description": "Identify validated knowledge gaps in LLMs by testing what they don't know",
  "type": "module",
  "bin": {
    "socrates": "dist/index.js"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "scripts": {
    "build": "npm run clean && ncc build src/index.ts -o dist -m esm --source-map",
    "check": "tsc --noEmit",
    "clean": "rm -rf dist",
    "dev": "tsx src/index.ts",
    "prepare": "npm run build",
    "start": "node dist/index.js"
  },
  "keywords": [
    "llm",
    "gemini",
    "evaluation",
    "knowledge-gaps",
    "cli"
  ],
  "license": "MIT",
  "dependencies": {
    "@google/genai": "^1.0.0"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@vercel/ncc": "^0.38.4",
    "tsx": "^4.21.0",
    "typescript": "^5.0.0"
  }
}
