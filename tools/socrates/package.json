{
  "name": "socrates",
  "version": "1.0.0",
  "description": "Identify validated knowledge gaps in LLMs by testing what they don't know",
  "type": "module",
  "bin": {
    "socrates": "dist/index.js"
  },
  "engines": {
    "node": ">=24.0.0"
  },
  "scripts": {
    "build": "npm run clean && esbuild src/index.ts --bundle --platform=node --format=cjs --outfile=dist/index.js",
    "check": "tsc --noEmit",
    "clean": "rm -rf dist",
    "dev": "tsx src/index.ts",
    "prepare": "npm run build",
    "start": "node dist/index.js"
  },
  "keywords": [
    "llm",
    "gemini",
    "evaluation",
    "knowledge-gaps",
    "cli"
  ],
  "license": "MIT",
  "dependencies": {
    "@google/genai": "^1.39.0"
  },
  "devDependencies": {
    "@types/node": "^25.2.0",
    "esbuild": "^0.27.3",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3"
  }
}
