#!/bin/sh

if [ -x /bin/uname ]; then

  UNAME="/bin/uname"

elif [ -x /usr/bin/uname ]; then

  UNAME="/usr/bin/uname"

else
  
  echo "none"
  exit

fi

uname_s=`$UNAME -s`    # OS
#uname_r=`$UNAME -r`    # release/version
#uname_m=`$UNAME -m`    # machine/CPU
  
case $uname_s in

  # Can also switch on $uname_r, $uname_m if necessary.

  Linux)
  
    platform="linux"
    ;;    
    
  OSF1)
  
    platform="osf"
    ;;
    
  SunOS)
  
    platform="sunos"
    ;;
    
  FreeBSD)
  
    platform="freebsd"
    ;;
    
  IRIX)
  
    platform="irix"
    ;;

  Darwin)

    platform="darwin"
    ;;

  CYGWIN*)

    platform="cygwin"
    ;;

esac

echo $platform
