#!/usr/bin/env bash

set -euo pipefail

usage() {
  cat <<EOF
Usage: $(basename "$0") IMAGE1 IMAGE2

Compares two screenshots.

Arguments:
  IMAGE1      The first image file.
  IMAGE2      The second image file.

Options:
  --help      Display this help message and exit

Examples:
  $(basename "$0") screenshot1.png screenshot2.png
EOF
  exit 0
}

if [[ "${1:-}" == "--help" ]]; then
  usage
fi

if [[ $# -ne 2 ]]; then
  usage 1 >&2
fi

require() {
  command -v "$1" >/dev/null 2>&1 || {
    echo >&2 "$(basename "$0"): $1 not found"
    exit 127
  }
}

TARGET="${HOME}/.local/bin/screenshot-compare"

if [ ! -x "$TARGET" ]; then
  echo "$(basename "$0"): required executable not found at $TARGET" >&2
  echo "Install/update via ./update (tools/screenshot-compare)" >&2
  exit 127
fi

exec "$TARGET" "$@"
