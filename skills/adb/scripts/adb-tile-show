#!/usr/bin/env bash

usage() {
  cat <<EOF
Usage: $(basename "$0") TILE_INDEX

Activates a tile at the specified index. The tile must already have been added
to the carousel (e.g., via 'adb-tile-add').

Note: 'adb-tile-add' shows tiles immediately by default, making this command
primarily useful for switching between already added tiles.

Arguments:
  TILE_INDEX  The index of the tile to activate.

Options:
  --help      Display this help message and exit

Environment:
  ANDROID_SERIAL  Serial number of device to connect to (see 'adb devices -l').
                  To target a specific device, use:
                    env ANDROID_SERIAL=<serial> $(basename "$0")

Examples:
  $(basename "$0") 0
  $(basename "$0") 1
EOF
  exit 0
}

if [[ "$1" == "--help" ]]; then
  usage
fi

if [ -z "$1" ]; then
  usage 1 >&2
fi

require() {
  command -v "$1" >/dev/null 2>&1 || {
    echo >&2 "$(basename "$0"): $1 not found"
    exit 127
  }
}

require adb

# Check device availability
if ! adb get-state >/dev/null 2>&1; then
  if [[ -n "$ANDROID_SERIAL" ]]; then
    echo "$(basename "$0"): device '$ANDROID_SERIAL' not available" >&2
  else
    echo "$(basename "$0"): no device connected" >&2
  fi
  exit 1
fi

adb shell am broadcast -a com.google.android.wearable.app.DEBUG_SYSUI --es operation show-tile --ei index "$1"
