#!/usr/bin/env bash

usage() {
  cat <<EOF
Usage: $(basename "$0") TAG

Streams logcat output filtered by a specific tag on an adb-connected device.

Arguments:
  TAG         The logcat tag to filter by (e.g. PowerManagerService).

Options:
  --help      Display this help message and exit

Environment:
  ANDROID_SERIAL  Serial number of device to connect to (see 'adb devices -l').

Examples:
  $(basename "$0") PowerManagerService
  $(basename "$0") ActivityManager
EOF
  exit 0
}

if [[ "$1" == "--help" ]]; then
  usage
fi

if [[ -z "$1" ]]; then
  usage 1 >&2
fi

require() {
  command -v "$1" >/dev/null 2>&1 || {
    echo >&2 "$(basename "$0"): $1 not found"
    exit 127
  }
}

require adb

adb logcat -v time "$(printf '*:S %s' "$1")"
