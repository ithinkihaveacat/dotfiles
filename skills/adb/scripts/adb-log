#!/usr/bin/env bash

usage() {
  cat <<EOF
Usage: $(basename "$0") MESSAGE

Writes a message to the Android system log on an adb-connected device.

Arguments:
  MESSAGE     The message string to log.

Options:
  --help      Display this help message and exit

Environment:
  ANDROID_SERIAL  Serial number of device to connect to (see 'adb devices -l').

Examples:
  $(basename "$0") "Starting test sequence"
EOF
  exit 0
}

if [[ "$1" == "--help" ]]; then
  usage
fi

if [ -z "$1" ]; then
  usage 1 >&2
fi

require() {
  command -v "$1" >/dev/null 2>&1 || {
    echo >&2 "$(basename "$0"): $1 not found"
    exit 127
  }
}

require adb

TAG=$(basename "$0")

# Priority set to FATAL because otherwise messages seem to be dropped
adb exec-out log -p f -t "$TAG" "$1"
