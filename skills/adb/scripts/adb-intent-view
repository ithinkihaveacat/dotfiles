#!/usr/bin/env bash

usage() {
  cat <<EOF
Usage: $(basename "$0") DEEPLINK

Starts an activity with an android.intent.action.VIEW intent for the given deeplink.

Arguments:
  DEEPLINK    The URI to open (e.g. "https://example.com/path")

Options:
  --help      Display this help message and exit

Environment:
  ANDROID_SERIAL  Serial number of device to connect to (see 'adb devices -l').

Examples:
  $(basename "$0") "https://example.com/deeplink"
EOF
  exit 0
}

if [[ "$1" == "--help" ]]; then
  usage
fi

if [ $# -ne 1 ]; then
  usage 1 >&2
fi

require() {
  command -v "$1" >/dev/null 2>&1 || {
    echo >&2 "$(basename "$0"): $1 not found"
    exit 127
  }
}

require adb

adb exec-out am start -a android.intent.action.VIEW -c android.intent.category.BROWSABLE -d "$1"
