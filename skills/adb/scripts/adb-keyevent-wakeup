#!/usr/bin/env bash

usage() {
  cat <<EOF
Usage: $(basename "$0")

Sends a KEYCODE_WAKEUP key event to an adb-connected Android device.

Options:
  --help      Display this help message and exit

Environment:
  ANDROID_SERIAL  Serial number of device to connect to (see 'adb devices -l').
EOF
  exit 0
}

if [[ "$1" == "--help" ]]; then
  usage
fi

require() {
  command -v "$1" >/dev/null 2>&1 || {
    echo >&2 "$(basename "$0"): $1 not found"
    exit 127
  }
}

require adb

# https://developer.android.com/reference/android/view/KeyEvent#KEYCODE_WAKEUP
adb exec-out input keyevent KEYCODE_WAKEUP
