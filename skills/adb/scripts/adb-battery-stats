#!/usr/bin/env bash

usage() {
  cat <<EOF
Usage: $(basename "$0")

Displays battery-related information and settings from an adb-connected device.

Options:
  --help      Display this help message and exit

Environment:
  ANDROID_SERIAL  Serial number of device to connect to (see 'adb devices -l').
EOF
  exit 0
}

if [[ "$1" == "--help" ]]; then
  usage
fi

require() {
  command -v "$1" >/dev/null 2>&1 || {
    echo >&2 "$(basename "$0"): $1 not found"
    exit 127
  }
}

require adb

# Check if device is available
if [ "$(adb get-state 2>/dev/null)" != "device" ]; then
  echo "$(basename "$0"): error: no device connected" >&2
  exit 1
fi

names=(
  screen_brightness
  assisted_gps_enabled
  screen_brightness_mode
  screen_off_timeout
  ambient_enabled
  bluetooth_on
  wifi_on
  cell_on
  clockwork_cell_auto_setting
  adb_wifi_enabled
)

match=$(echo "${names[@]}" | tr ' ' '\n' | paste -s -d \| -)

adb exec-out dumpsys battery
adb exec-out dumpsys settings | awk -v _match="$match" '$2 ~ "name:(" _match ")"'
