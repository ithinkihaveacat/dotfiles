#!/usr/bin/env bash

usage() {
  cat <<EOF
Usage: $(basename "$0") [PACKAGE]

Displays dumpsys information for the Android JobScheduler.

If a PACKAGE is provided, only jobs associated with that package's WorkManager
SystemJobService are shown.

Arguments:
  PACKAGE     Optional package name to filter jobs by.

Options:
  --help      Display this help message and exit

Environment:
  ANDROID_SERIAL  Serial number of device to connect to (see 'adb devices -l').

Examples:
  $(basename "$0")
  $(basename "$0") com.example.app
EOF
  exit 0
}

if [[ "$1" == "--help" ]]; then
  usage
fi

require() {
  command -v "$1" >/dev/null 2>&1 || {
    echo >&2 "$(basename "$0"): $1 not found"
    exit 127
  }
}

require adb
require perl

# WorkManager debug docs: https://developer.android.com/topic/libraries/architecture/workmanager/how-to/debugging

if [[ -z "$1" ]]; then
  adb exec-out dumpsys jobscheduler
else
  adb exec-out dumpsys jobscheduler | perl -we 'while (<STDIN>) { print if (index($_, qq{${ARGV[0]}/androidx.work.impl.background.systemjob.SystemJobService}) != -1) .. /\s+Ready/ }' "$1"
fi
