#!/usr/bin/env bash

usage() {
  cat <<EOF
Usage: $(basename "$0") SERVICE_NAME

Displays dumpsys information for a specific Android service.

Arguments:
  SERVICE_NAME  The name of the service (e.g. com.google.android.wearable.healthservices)

Options:
  --help        Display this help message and exit

Environment:
  ANDROID_SERIAL  Serial number of device to connect to (see 'adb devices -l').

Examples:
  $(basename "$0") com.google.android.wearable.healthservices
EOF
  exit 0
}

if [[ "$1" == "--help" ]]; then
  usage
fi

if [ -z "$1" ]; then
  usage 1 >&2
fi

require() {
  command -v "$1" >/dev/null 2>&1 || {
    echo >&2 "$(basename "$0"): $1 not found"
    exit 127
  }
}

require adb

adb exec-out dumpsys activity service "$1"
