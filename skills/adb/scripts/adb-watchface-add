#!/usr/bin/env bash

usage() {
  cat <<EOF
Usage: $(basename "$0") COMPONENT_NAME

Sets the current watch face on a Wear OS device.

This script is a convenient wrapper around 'adb shell am broadcast' to change
the active watch face. The argument should be the component name of the
watch face service.

Arguments:
  COMPONENT_NAME  Component name of the watch face service
                  (e.g., com.google.android.wearable.app/.watchfaces.GoogleWatchFace)

Options:
  --help          Display this help message and exit

Environment:
  ANDROID_SERIAL  Serial number of device to connect to (see 'adb devices -l').
                  To target a specific device, use:
                    env ANDROID_SERIAL=<serial> $(basename "$0")

Examples:
  # Set a specific watch face
  $(basename "$0") com.google.android.wearable.app/.watchfaces.GoogleWatchFace
EOF
  exit 0
}

if [[ "$1" == "--help" ]]; then
  usage
fi

if [ -z "$1" ]; then
  usage 1 >&2
fi

require() {
  command -v "$1" >/dev/null 2>&1 || {
    echo >&2 "$(basename "$0"): $1 not found"
    exit 127
  }
}

require adb

# Check device availability
if ! adb get-state >/dev/null 2>&1; then
  if [[ -n "$ANDROID_SERIAL" ]]; then
    echo "$(basename "$0"): device '$ANDROID_SERIAL' not available" >&2
  else
    echo "$(basename "$0"): no device connected" >&2
  fi
  exit 1
fi

adb exec-out am broadcast -a com.google.android.wearable.app.DEBUG_SURFACE --es operation set-watchface --es watchFaceId "$1"
