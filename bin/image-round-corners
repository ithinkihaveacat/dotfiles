#!/usr/bin/env bash

set -eo pipefail
shopt -s nullglob

usage() {
  cat <<EOF
Usage: $(basename "$0") [OPTIONS] FILE

Applies a rounded rectangle mask to an image.

Arguments:
  FILE              The input image file.

Options:
  -h, --help        Display this help message and exit

Examples:
  # Apply rounded corners to an image
  $(basename "$0") screenshot.png
EOF
  exit 0
}

if [[ "$1" == "-h" ]] || [[ "$1" == "--help" ]]; then
  usage
fi

require() { hash "$@" || exit 127; }

require magick

if [[ $# -ne 1 ]]; then
  usage
fi

if [[ ! -f "$1" ]]; then
  echo "$(basename "$0"): $1: file does not exist"
  exit 1
fi

tmpfile=$(mktemp /tmp/image-round-corners.XXXXXX)

magick "$1" \
  -alpha set -background none \
  \( +clone -evaluate set 0% -channel Alpha -draw "roundrectangle 0,0,%[fx:w-1],%[fx:h-1],%[fx:min(w,h)/10],%[fx:min(w,h)/10]" \) \
  -compose DstIn -composite \
  png:"$tmpfile" && mv "$tmpfile" "$1"
