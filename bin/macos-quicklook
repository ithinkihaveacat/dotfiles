#!/usr/bin/env bash

usage() {
  cat <<EOF
Usage: $(basename "$0") FILE...

Opens the macOS Quick Look preview for the specified files.

Arguments:
  FILE...     One or more files to preview.

Options:
  --help      Display this help message and exit

Examples:
  $(basename "$0") image.png
  $(basename "$0") *.pdf
EOF
  exit 0
}

if [[ "$1" == "--help" ]]; then
  usage
fi

if [ $# == 0 ]; then
  usage 1 >&2
fi

require() {
  command -v "$1" >/dev/null 2>&1 || {
    echo >&2 "$(basename "$0"): $1 not found"
    exit 127
  }
}

require qlmanage

qlmanage -p "$@" >/dev/null 2>&1
