#!/usr/bin/env bash

usage() {
  cat <<EOF
Usage: $(basename "$0") manifest|-

Extracts the names of Wear OS tile services from an AndroidManifest.xml file.

Arguments:
  manifest|-  Path to AndroidManifest.xml or '-' to read from stdin.

Options:
  -h, --help  Display this help message and exit

Examples:
  $(basename "$0") AndroidManifest.xml
  $(basename "$0") -
EOF
  exit 0
}

require() { hash "$@" || exit 127; }

if [[ "$1" == "-h" || "$1" == "--help" ]]; then
  usage
fi

require xpath

if [ $# -ne 1 ]; then
  usage
fi

SOURCE="-" # default to stdin

if [ -n "${1:-}" ]; then
  SOURCE="$1"
fi

xpath -n -q -e "//application/service[intent-filter/action[@android:name='androidx.wear.tiles.action.BIND_TILE_PROVIDER']]/@android:name" "$SOURCE" | sed 's/.*="\([^"]*\)"/\1/'
