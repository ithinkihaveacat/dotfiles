#!/usr/bin/env bash

usage() {
  cat <<EOF
Usage: $(basename "$0") FILE

Extracts MP3 enclosure URLs from an RSS XML file.

Arguments:
  FILE        The input RSS XML file.

Options:
  --help      Display this help message and exit

Examples:
  $(basename "$0") podcast.xml
EOF
  exit 0
}

if [[ "$1" == "--help" ]]; then
  usage
fi

if [ ! -f "$1" ]; then
  usage 1 >&2
fi

require() {
  command -v "$1" >/dev/null 2>&1 || {
    echo >&2 "$(basename "$0"): $1 not found"
    exit 127
  }
}

require xmllint

xmllint --xpath '//*[local-name()="enclosure"]/@url' "$1" | sed -e 's/ url="\([^"]*\)"/\1/g'
