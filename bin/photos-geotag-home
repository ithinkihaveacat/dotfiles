#!/usr/bin/env bash

usage() {
  cat <<EOF
Usage: $(basename "$0") DIRECTORY

Geotags images in the specified directory with "Home" coordinates.
Requires GPSLATITUDE_HOME, GPSLATITUDEREF_HOME, GPSLONGITUDE_HOME, and
GPSLONGITUDEREF_HOME environment variables to be set.

Arguments:
  DIRECTORY   The directory containing photos to geotag.

Options:
  --help      Display this help message and exit

Examples:
  $(basename "$0") .
EOF
  exit 0
}

if [[ "$1" == "--help" ]]; then
  usage
fi

require() {
  command -v "$1" >/dev/null 2>&1 || {
    echo >&2 "$(basename "$0"): $1 not found"
    exit 127
  }
}

require exiftool

if [ $# -eq 0 ]; then
  usage 1 >&2
fi

if test -z "${GPSLATITUDE_HOME:-}"; then
  echo "$(basename "$0"): error: [GPSLATITUDE_HOME] not set" >&2
  exit 1
fi

exiftool -overwrite_original -gpslongitude="$GPSLONGITUDE_HOME" -gpslongituderef="$GPSLONGITUDEREF_HOME" -gpslatitude="$GPSLATITUDE_HOME" -gpslatituderef="$GPSLATITUDEREF_HOME" "$1"
