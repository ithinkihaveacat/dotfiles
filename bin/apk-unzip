#!/usr/bin/env bash

require() { hash "$@" || exit 127; }

require unzip

if [[ -z "$1" && $1 != *.zip ]]; then
  echo "usage: $(basename "$0") zip"
  exit 1
fi

TMPDIR=$(mktemp -d)

# -o (overwrite existing without prompting) because APKs can contain files that differ only in case...
echo "warning: unzipping with the -o option; files may be overwritten"
unzip -q -o "$1" -d "$TMPDIR"

echo "$TMPDIR"
