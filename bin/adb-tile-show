#!/usr/bin/env bash

usage() {
  cat <<EOF
Usage: $(basename "$0") TILE_INDEX

Activates a tile at the specified index.

Arguments:
  TILE_INDEX  The index of the tile to activate.

Options:
  -h, --help  Display this help message and exit

Examples:
  $(basename "$0") 0
  $(basename "$0") 1
EOF
  exit 0
}

if [[ "$1" == "-h" || "$1" == "--help" ]]; then
  usage
fi

if [ -z "$1" ]; then
  usage
fi

require() { hash "$@" || exit 127; }

require adb

adb shell am broadcast -a com.google.android.wearable.app.DEBUG_SYSUI --es operation show-tile --ei index "$1"
