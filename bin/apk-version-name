#!/usr/bin/env bash

usage() {
  cat <<EOF
Usage: $(basename "$0") APK_FILE

Prints the version name of an APK.

This script uses 'apkanalyzer' to extract the version name from the manifest.

Arguments:
  APK_FILE    Path to the APK file.

Options:
  -h, --help  Display this help message and exit

Examples:
  # Get the version name of an APK
  $(basename "$0") /path/to/your/app.apk
EOF
  exit 0
}

if [[ "$1" == "-h" || "$1" == "--help" ]]; then
  usage
fi

require() { hash "$@" || exit 127; }

require apkanalyzer

if [ -z "$1" ]; then
  echo "$(basename "$0"): missing file operand" >&2
  exit 1
fi

if [ ! -f "$1" ]; then
  echo "$(basename "$0"): $1: No such file or directory" >&2
  exit 1
fi

apkanalyzer manifest version-name "$1"
