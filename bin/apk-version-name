#!/usr/bin/env bash

usage() {
  cat <<EOF
Usage: $(basename "$0") APK_FILE

Prints the version name of an APK.

This script supports both standalone APKs and ZIP archives containing a base
split APK. It uses 'apkanalyzer' to extract the version name from the manifest.

Arguments:
  APK_FILE    Path to an APK file or a ZIP archive.

Options:
  -h, --help  Display this help message and exit

Examples:
  # Get the version name of a standalone APK
  $(basename "$0") /path/to/your/app.apk

  # Get the version name from a ZIP archive
  $(basename "$0") /path/to/your/app.zip
EOF
  exit 0
}

if [[ "$1" == "-h" || "$1" == "--help" ]]; then
  usage
fi

require() { hash "$@" || exit 127; }

require apkanalyzer
require apk-base-split-extract

if [ -z "$1" ]; then
  echo "$(basename "$0"): missing file operand" >&2
  exit 1
fi

if [ ! -f "$1" ]; then
  echo "$(basename "$0"): $1: No such file or directory" >&2
  exit 1
fi

apkanalyzer manifest version-name "$(apk-base-split-extract "$1")"
