#!/usr/bin/env bash

usage() {
  cat <<EOF
Usage: $(basename "$0") APK_FILE

Prints the version code of an APK.

This script supports both standalone APKs and ZIP archives containing a base
split APK. It uses 'apkanalyzer' to extract the version code from the manifest.

Arguments:
  APK_FILE    Path to an APK file or a ZIP archive.

Options:
  -h, --help  Display this help message and exit

Examples:
  # Get the version code of a standalone APK
  $(basename "$0") /path/to/your/app.apk

  # Get the version code from a ZIP archive
  $(basename "$0") /path/to/your/app.zip
EOF
  exit 0
}

if [[ "$1" == "-h" || "$1" == "--help" ]]; then
  usage
fi

require() { hash "$@" || exit 127; }

require apkanalyzer
require unzip

if [ -z "$1" ]; then
  usage
fi

if [ ! -f "$1" ]; then
  echo "$(basename "$0"): $1: No such file or directory" >&2
  exit 1
fi

if [[ $1 == *.zip ]]; then
  TMPDIR=$(mktemp -d)
  trap 'rm -rf -- "$TMPDIR"' EXIT
  unzip -q -j "$1" '*-base-split.apk' -d "$TMPDIR"
  BASEAPKS=("$TMPDIR"/*-base-split.apk)
  BASEAPK="${BASEAPKS[0]}"
  if [ ! -f "$BASEAPK" ]; then
    echo "$(basename "$0"): *-base-split.apk not found in zip, aborting" >&2
    exit 1
  fi
else
  BASEAPK="$1"
fi

apkanalyzer manifest version-code "$BASEAPK"
