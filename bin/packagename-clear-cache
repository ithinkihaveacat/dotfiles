#!/usr/bin/env bash

usage() {
  cat <<EOF
Usage: $(basename "$0") PACKAGE

Clears the cache of a given package.

This script is useful for testing an app's behavior on a clean start, or for
freeing up storage space.

Arguments:
  PACKAGE     Android package name (e.g., com.example.app)

Options:
  -h, --help  Display this help message and exit

Examples:
  # Clear the cache of the System UI
  $(basename "$0") com.android.systemui

  # Clear the cache of a specific app
  $(basename "$0") com.google.android.apps.photos
EOF
  exit 0
}

if [[ "$1" == "-h" || "$1" == "--help" ]]; then
  usage
fi

require() { hash "$@" || exit 127; }

require adb

if [ -z "$1" ]; then
  echo "$(basename "$0"): missing package name operand" >&2
  exit 1
fi

adb exec-out pm clear "$1"
