#!/usr/bin/env bash

usage() {
  cat <<EOF
Usage: $(basename "$0") PACKAGE

Resets the permissions of a given package.

This script is useful for testing an app's behavior on a clean install, or for
revoking all of an app's permissions at once.

Arguments:
  PACKAGE     Android package name (e.g., com.example.app)

Options:
  -h, --help  Display this help message and exit

Environment:
  ANDROID_SERIAL  Serial number of device to connect to (see 'adb devices -l').
                  To target a specific device, use:
                    env ANDROID_SERIAL=<serial> $(basename "$0")

Examples:
  # Reset permissions for the System UI
  $(basename "$0") com.android.systemui

  # Reset permissions for a specific app
  $(basename "$0") com.google.android.apps.photos
EOF
  exit 0
}

if [[ "$1" == "-h" || "$1" == "--help" ]]; then
  usage
fi

require() { hash "$@" || exit 127; }

require adb

if [ -z "$1" ]; then
  usage
fi

adb exec-out pm reset-permissions "$1"
