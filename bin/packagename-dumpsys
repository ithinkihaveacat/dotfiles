#!/usr/bin/env bash

usage() {
  cat <<EOF
Usage: $(basename "$0") PACKAGE

Dumpsys package information for a given package.

This script is a convenient wrapper around 'adb dumpsys package' to get
detailed information about an installed application.

Arguments:
  PACKAGE     Android package name (e.g., com.example.app)

Options:
  -h, --help  Display this help message and exit

Environment:
  ANDROID_SERIAL  Serial number of device to connect to (see 'adb devices -l').
                  To target a specific device, use:
                    env ANDROID_SERIAL=<serial> $(basename "$0")

Examples:
  # Get information about the System UI
  $(basename "$0") com.android.systemui

  # Get information about a specific app
  $(basename "$0") com.google.android.apps.photos

  # Diff the output between two app versions to identify changes
  $(basename "$0") com.example.app > before.txt
  # (update the app)
  $(basename "$0") com.example.app > after.txt
  diff before.txt after.txt
EOF
  exit 0
}

if [[ "$1" == "-h" || "$1" == "--help" ]]; then
  usage
fi

require() { hash "$@" || exit 127; }

require adb

if [ -z "$1" ]; then
  usage
fi

adb exec-out dumpsys package "$1"
