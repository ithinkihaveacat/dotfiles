#!/usr/bin/env bash

require() { hash "$@" || exit 127; }

require apkanalyzer
require unzip

if [ -z "$1" ]; then
  echo "usage: $(basename "$0") apk"
  exit 1
fi

if [[ $1 == *.zip ]]; then

  TMPDIR=$(mktemp -d)
  trap 'rm -rf -- "$TMPDIR"' EXIT

  unzip -q "$1" -d "$TMPDIR"
  APKS=("$TMPDIR"/*.apk)
  BASEAPK=("$TMPDIR"/*_base_split.apk)

  if [ ! -f "${BASEAPK[0]}" ]; then
    echo "error: *_base_split.apk not found in zip, aborting"
	exit 1
  fi

else

  BASEAPK="$1"

fi

# The META-INF version is used from version beta01
VERSIONFILE=$(apkanalyzer files list "$BASEAPK" | grep -F -e "/META-INF/androidx.wear.compose_compose-foundation.version")

apkanalyzer files cat --file "$VERSIONFILE" "$BASEAPK"
