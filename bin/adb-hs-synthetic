#!/usr/bin/env bash

# https://developer.android.com/training/wearables/health-services/synthetic-data

# extglob is required to match on generated string in case command below
shopt -s extglob

COMMANDS=$(echo {start,stop}_{walking,running,hiking,swimming,running_treadmill,sleeping,exercise})

if [ -z "$1" ]; then
  echo "usage: $(basename "$0") command"
  echo
  echo "Commands:"
  echo
  echo "on"
  echo "off"
  echo "fall"
  echo "$COMMANDS" | tr " " "\n"
  exit 1
fi

COMMAND=$(echo "$1" | tr '[:upper:]' '[:lower:]')

adb shell log -t "$0" "Command $COMMAND"

# shellcheck disable=SC2254
case $COMMAND in

  on)
    adb shell am broadcast -a "whs.USE_SYNTHETIC_PROVIDERS" com.google.android.wearable.healthservices
  ;;

  off)
    adb shell am broadcast -a "whs.USE_SENSOR_PROVIDERS" com.google.android.wearable.healthservices
  ;;

  fall)
    adb shell am broadcast -a "whs.synthetic.user.FALL_OVER" com.google.android.wearable.healthservices
  ;;

  $(printf "@(%s)" "$(echo "$COMMANDS" | tr ' ' '|')"))
    adb shell am broadcast -a "whs.synthetic.user.$1" com.google.android.wearable.healthservices
  ;;

  *)
    echo "error: command $1 not found"
	exit 1
  ;;

esac
