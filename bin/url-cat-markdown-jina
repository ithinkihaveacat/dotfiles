#!/usr/bin/env bash

usage() {
  cat <<EOF
Usage: $(basename "$0") URL

Fetches a URL as Markdown using the Jina Reader API (r.jina.ai).

Arguments:
  URL         The URL to fetch and convert to Markdown.

Options:
  --help      Display this help message and exit

Examples:
  $(basename "$0") https://example.com/article
EOF
  exit 0
}

if [[ "$1" == "--help" ]]; then
  usage
fi

if [ -z "$1" ]; then
  usage 1 >&2
fi

require() {
  command -v "$1" >/dev/null 2>&1 || {
    echo >&2 "$(basename "$0"): $1 not found"
    exit 127
  }
}

require curl

# https://jina.ai/reader

curl -sSL --output - "$(printf "https://r.jina.ai/%s" "$1")"
