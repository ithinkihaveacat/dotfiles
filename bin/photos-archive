#!/usr/bin/env bash

# Moves images files in input directory into date-determined
# subdirectories of $DSTDIR.

usage() {
  cat <<EOF
Usage: $(basename "$0") DIRECTORY

Archives image files from the specified directory into date-based subdirectories.
Target: ~/iCloud/Pictures/Originals/YYYY/MM/DD/filename.ext

Arguments:
  DIRECTORY   The source directory containing images to archive.

Options:
  --help      Display this help message and exit

Examples:
  $(basename "$0") ~/Downloads/new_photos
EOF
  exit 0
}

if [[ "$1" == "--help" ]]; then
  usage
fi

require() {
  command -v "$1" >/dev/null 2>&1 || {
    echo >&2 "$(basename "$0"): $1 not found"
    exit 127
  }
}

require exiftool

#DSTDIR="$HOME/Pictures/Originals"
DSTDIR="$HOME/iCloud/Pictures/Originals"

if [ $# -eq 0 ]; then
  usage 1 >&2
fi

if ! test -d "$DSTDIR"; then
  echo "$(basename "$0"): error: [$DSTDIR] is not a directory" >&2
  exit 1
fi

if ! test -d "$1"; then
  echo "$(basename "$0"): error: [$1] is not a directory" >&2
  exit 1
fi

exiftool -r -d "$DSTDIR/%Y/%m/%d/%%f.%%e" "-filename<datetimeoriginal" "$1"
