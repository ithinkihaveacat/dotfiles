#!/usr/bin/env bash

usage() {
  cat <<EOF
Usage: $(basename "$0")

Initializes a new .prettierrc file in the current directory.

This script creates a .prettierrc file with a basic configuration for
the Prettier code formatter.

This script will exit if a .prettierrc file already exists.

Examples:
  # Initialize Prettier in the current directory.
  $(basename "$0")
EOF
  exit 0
}

if [[ "$1" == "--help" ]]; then
  usage
fi

require() {
  command -v "$1" >/dev/null 2>&1 || {
    echo >&2 "$(basename "$0"): $1 not found"
    exit 127
  }
}

CONFIG=".prettierrc"

if [ -f $CONFIG ]; then
  echo "error: $CONFIG already exists, aborting"
  exit 1
fi

cat <<CONFIG_END >$CONFIG
{
  "tabWidth": 2,
  "useTabs": false,
  "trailingComma": "none",
  "proseWrap": "always"
}
CONFIG_END
