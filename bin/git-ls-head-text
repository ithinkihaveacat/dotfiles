#!/usr/bin/env bash

usage() {
  cat <<EOF
Usage: $(basename "$0")

Lists all text files in the current Git repository, including untracked files.

Options:
  --help      Display this help message and exit
EOF
  exit 0
}

if [[ "$1" == "--help" ]]; then
  usage
fi

require() {
  command -v "$1" >/dev/null 2>&1 || {
    echo >&2 "$(basename "$0"): $1 not found"
    exit 127
  }
}

require git
require file

(git ls-files && git ls-files --others --exclude-standard) | sort | file --mime-type -f - | awk -F : 'index($2, "text/") { print $1 }'
