#!/usr/bin/env bash

usage() {
  cat <<EOF
Usage: $(basename "$0") [VERSION]

Updates or creates a .envrc file to use a specific Node.js version via direnv.

Arguments:
  VERSION     The Node.js version to use (default: 24).

Options:
  --help      Display this help message and exit

Environment:
  NODE_VERSIONS  Path to the directory containing Node.js versions.
EOF
  exit 0
}

if [[ "$1" == "--help" ]]; then
  usage
fi

if [ ! -d "${NODE_VERSIONS:-}" ]; then
  echo "$(basename "$0"): error: NODE_VERSIONS not set, or not a directory" >&2
  exit 1
fi

require() {
  command -v "$1" >/dev/null 2>&1 || {
    echo >&2 "$(basename "$0"): $1 not found"
    exit 127
  }
}

require direnv

VERSION=${1:-24}

if [ ! -e ".envrc" ]; then
  echo "$(basename "$0"): creating .envrc"
  touch .envrc
else
  echo "$(basename "$0"): updating .envrc"
fi

grep "use node" .envrc >/dev/null || echo "use node $VERSION" >>.envrc
grep "layout node" .envrc >/dev/null || echo "layout node" >>.envrc

direnv allow
