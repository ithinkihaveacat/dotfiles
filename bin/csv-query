#!/usr/bin/env bash

usage() {
  cat <<EOF
Usage: $(basename "$0") CSV_FILE QUERY

Queries a CSV file using SQLite in-memory database.

Arguments:
  CSV_FILE    The path to the CSV file to query.
  QUERY       The SQL query to execute.

Options:
  --help      Display this help message and exit

Examples:
  $(basename "$0") data.csv "SELECT * FROM data LIMIT 10"
  $(basename "$0") data.csv ".schema"
EOF
  exit 0
}

if [[ "$1" == "--help" ]]; then
  usage
fi

if [ -z "$1" ] || [ -z "$2" ]; then
  usage 1 >&2
fi

require() {
  command -v "$1" >/dev/null 2>&1 || {
    echo >&2 "$(basename "$0"): $1 not found"
    exit 127
  }
}

require sqlite3

sqlite3 :memory: --csv -cmd "$(printf '.import %q %s' "$1" "$(basename "$1" .csv)")" "$2"
