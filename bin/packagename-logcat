#!/usr/bin/env bash

usage() {
  cat <<EOF
Usage: $(basename "$0") PACKAGE

Displays logcat output for a given package.

This script is a convenient wrapper around 'adb logcat --pid' to filter
logcat output by a package's process ID.

Arguments:
  PACKAGE     Android package name (e.g., com.example.app)

Options:
  -h, --help  Display this help message and exit

Examples:
  # View logcat for the System UI
  $(basename "$0") com.android.systemui

  # View logcat for a specific app
  $(basename "$0") com.google.android.apps.photos
EOF
  exit 0
}

if [[ "$1" == "-h" || "$1" == "--help" ]]; then
  usage
fi

require() { hash "$@" || exit 127; }

require adb

if [ -z "$1" ]; then
  echo "$(basename "$0"): missing package name operand" >&2
  exit 1
fi

PID=$(adb exec-out pidof "$1")

if [ -z "$PID" ]; then
  echo "$(basename "$0"): can't get pid of $1" >&2
  exit 1
fi

adb logcat --pid=$PID
