#!/usr/bin/env bash

usage() {
  cat <<EOF
Usage: $(basename "$0") URL FILENAME

Takes a screenshot of a URL using headless Google Chrome.

Arguments:
  URL         The URL to capture.
  FILENAME    The path to save the screenshot image to.

Options:
  --help      Display this help message and exit

Examples:
  $(basename "$0") https://example.com example.png
EOF
  exit 0
}

if [[ "$1" == "--help" ]]; then
  usage
fi

if [ $# -ne 2 ]; then
  usage 1 >&2
fi

require() {
  command -v "$1" >/dev/null 2>&1 || {
    echo >&2 "$(basename "$0"): $1 not found"
    exit 127
  }
}

CHROME='/Applications/Google Chrome.app/Contents/MacOS/Google Chrome'

if [[ ! -x "$CHROME" ]]; then
  echo "$(basename "$0"): error: Google Chrome not found at $CHROME" >&2
  exit 127
fi

# --window-size=412,732 # mobile
"$CHROME" --headless --screenshot="$2" "$1" 2>/dev/null
