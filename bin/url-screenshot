#!/usr/bin/env bash

require() { hash "$@" || exit 127; }

CHROME='/Applications/Google Chrome.app/Contents/MacOS/Google Chrome'

require "$CHROME"

if [ $# -ne 2 ]; then
  echo "usage: $(basename "$0") URL filename"
  exit 1
fi

# --window-size=412,732 # mobile
"$CHROME" --headless --screenshot="$2" "$1" 2>/dev/null
