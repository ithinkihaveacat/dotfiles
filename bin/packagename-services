#!/usr/bin/env bash

usage() {
  cat <<EOF
Usage: $(basename "$0") PACKAGE

Lists the services of a given package.

This script is a convenient wrapper around 'adb dumpsys activity service' to
list the running services of an application.

Arguments:
  PACKAGE     Android package name (e.g., com.example.app)

Options:
  -h, --help  Display this help message and exit

Examples:
  # List services for the System UI
  $(basename "$0") com.android.systemui

  # List services for a specific app
  $(basename "$0") com.google.android.apps.photos
EOF
  exit 0
}

if [[ "$1" == "-h" || "$1" == "--help" ]]; then
  usage
fi

require() { hash "$@" || exit 127; }

require adb

if [ -z "$1" ]; then
  echo "$(basename "$0"): missing package name operand" >&2
  exit 1
fi

adb exec-out dumpsys activity service "$1" | grep '^SERVICE' | awk '{ print $2 }'
