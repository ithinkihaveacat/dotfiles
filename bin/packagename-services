#!/usr/bin/env bash

require() { hash "$@" || exit 127; }

require adb

if [ -z "$1" ]; then
  echo "usage: $(basename "$0") packageName"
  exit 1
fi

SERVICES=$(adb shell dumpsys activity service "$1" | grep '^SERVICE' | awk '{ print $2 }')

for s in $SERVICES ; do
  printf "### %s ###\n" $s
  echo
  # OS metadata about the service itself (exactly the same fields/properties for each service)
  adb shell dumpsys activity services $s
  echo
done
