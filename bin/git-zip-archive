#!/usr/bin/env bash

usage() {
  cat <<EOF
Usage: $(basename "$0") ZIP_FILE

Creates a ZIP archive of the current HEAD.

Arguments:
  ZIP_FILE    The path to the output ZIP file.

Options:
  --help      Display this help message and exit

Examples:
  $(basename "$0") archive.zip
EOF
  exit 0
}

if [[ "$1" == "--help" ]]; then
  usage
fi

if [ $# == 0 ]; then
  usage 1 >&2
fi

require() {
  command -v "$1" >/dev/null 2>&1 || {
    echo >&2 "$(basename "$0"): $1 not found"
    exit 127
  }
}

require git

git archive --format=zip --prefix= -o "$1" HEAD
