#!/usr/bin/env bash

usage() {
  cat <<EOF
Usage: $(basename "$0")

Initializes a new tslint.json file in the current directory.

This script creates a tslint.json file with a basic configuration for
the TSLint code linter.

This script will exit if a tslint.json file already exists.

Options:
  --help      Display this help message and exit

Examples:
  # Initialize TSLint in the current directory.
  $(basename "$0")
EOF
  exit 0
}

if [[ "$1" == "--help" ]]; then
  usage
fi

require() {
  command -v "$1" >/dev/null 2>&1 || {
    echo >&2 "$(basename "$0"): $1 not found"
    exit 127
  }
}

CONFIG="tslint.json"

if [ -f "$CONFIG" ]; then
  echo "error: $CONFIG already exists, aborting"
  exit 1
fi

cat <<CONFIG_END >"$CONFIG"
// http://palantir.github.io/tslint/rules/
{
  "extends": "tslint:recommended",
  "rules": {
    "interface-name": false
    // "object-literal-sort-keys": false,
    // "no-console": false,
  }
}
CONFIG_END
