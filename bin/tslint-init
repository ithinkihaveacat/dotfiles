#!/usr/bin/env bash

usage() {
  cat <<EOF
Usage: $(basename "$0")

Initializes a new tslint.json file in the current directory.

This script creates a tslint.json file with a basic configuration for
the TSLint code linter.

This script will exit if a tslint.json file already exists.

Examples:
  # Initialize TSLint in the current directory.
  $(basename "$0")
EOF
  exit 0
}

if [[ "$1" == "-h" || "$1" == "--help" ]]; then
  usage
fi

CONFIG="tslint.json"

if [ -f $CONFIG ]; then
  echo "error: $CONFIG already exists, aborting"
  exit 1
fi

cat <<CONFIG_END >$CONFIG
// http://palantir.github.io/tslint/rules/
{
  "extends": "tslint:recommended",
  "rules": {
    "interface-name": false
    // "object-literal-sort-keys": false,
    // "no-console": false,
  }
}
CONFIG_END
