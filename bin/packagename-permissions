#!/usr/bin/env bash

usage() {
  cat <<EOF
Usage: $(basename "$0") PACKAGE

Lists the permissions of a given package.

This script is a convenient wrapper around 'adb dumpsys package' to extract
the permissions declared by an application.

Arguments:
  PACKAGE     Android package name (e.g., com.example.app)

Options:
  -h, --help  Display this help message and exit

Examples:
  # List permissions for the System UI
  $(basename "$0") com.android.systemui

  # List permissions for a specific app
  $(basename "$0") com.google.android.apps.photos
EOF
  exit 0
}

if [[ "$1" == "-h" || "$1" == "--help" ]]; then
  usage
fi

require() { hash "$@" || exit 127; }

require adb

if [ -z "$1" ]; then
  usage
fi

adb exec-out dumpsys package "$1" | perl -ne 'print (s/^....// && $_) if /^    declared permissions:/ .. /^$/'
