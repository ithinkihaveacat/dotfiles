#!/usr/bin/env bash

# Extracts the raw bugreport log from a zip file

require() {
  hash "$@" || exit 127
}

require unzip

usage() {
  cat <<EOF
Usage: $(basename "$0") bugreport.zip

Extracts the raw bug report log from a zip file.

This is useful for inspecting the full, unfiltered bug report text.

Arguments:
  bugreport.zip  A bug report zip file

Options:
  -h, --help     Display this help message and exit

Examples:
  # Extract the raw bug report log
  $(basename "$0") bugreport-2023-11-20.zip

  # Pipe to less for interactive viewing
  $(basename "$0") bugreport.zip | less
EOF
  exit 0
}

if [[ "$1" == "-h" || "$1" == "--help" ]]; then
  usage
fi

if [ $# == 0 ]; then
  usage
fi

# Samsung devices seem to use dumpstate-*...
LOG=$(unzip -qql "$1" | cut -c 31- | grep -e dumpstate- -e dumpstate.txt -e bugreport-)

unzip -p "$1" "$LOG"
