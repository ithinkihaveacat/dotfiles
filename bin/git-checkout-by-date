#!/usr/bin/env bash

usage() {
  cat <<EOF
Usage: $(basename "$0") DATE COMMIT

Checks out the last commit before a given date on a specific branch/commit.

Arguments:
  DATE        The cutoff date (e.g. "2023-01-01").
  COMMIT      The branch or commit to start from.

Options:
  --help      Display this help message and exit

Examples:
  $(basename "$0") 2023-01-01 master
EOF
  exit 0
}

if [[ "$1" == "--help" ]]; then
  usage
fi

if [ $# -ne 2 ]; then
  usage 1 >&2
fi

require() {
  command -v "$1" >/dev/null 2>&1 || {
    echo >&2 "$(basename "$0"): $1 not found"
    exit 127
  }
}

require git

date=$1
commit=$2

git checkout "$(git rev-list -n 1 --before="$date" "$commit")"
