#!/usr/bin/env bash
set -eo pipefail

usage() {
  cat <<EOF
Usage: $(basename "$0") [OPTIONS] FILE

Applies a circular mask to an image, making it round with a transparent
background.

Arguments:
  FILE              The input image file.

Options:
  -h, --help        Display this help message and exit

Examples:
  # Apply circular mask to a screenshot
  $(basename "$0") screenshot.png
EOF
  exit 0
}

if [[ "$1" == "-h" ]] || [[ "$1" == "--help" ]]; then
  usage
fi

require() { hash "$@" || exit 127; }

require magick

if [ -z "$1" ]; then
  usage
fi

filename="$1"

if [[ ! -f "$filename" ]]; then
  echo "$(basename "$0"): $filename: file does not exist" >&2
  exit 1
fi

tmpfile=$(mktemp /tmp/adb-screenshot.XXXXXX)

magick "$filename" \
  -alpha set -background none -fill white \
  \( +clone -channel A -evaluate set 0 +channel -draw "circle %[fx:w/2],%[fx:h/2] %[fx:w/2],0" \) \
  -compose dstin -composite \
  png:"$tmpfile" && mv "$tmpfile" "$filename"
