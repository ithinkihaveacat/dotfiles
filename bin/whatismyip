#!/usr/bin/env bash

usage() {
  cat <<EOF
Usage: $(basename "$0")

Displays your current public IP address using zx2c4.com.

Options:
  --help      Display this help message and exit
EOF
  exit 0
}

if [[ "$1" == "--help" ]]; then
  usage
fi

require() {
  command -v "$1" >/dev/null 2>&1 || {
    echo >&2 "$(basename "$0"): $1 not found"
    exit 127
  }
}

require curl

curl -sSL --output - https://zx2c4.com/ip
