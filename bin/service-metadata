#!/usr/bin/env bash

usage() {
  cat <<EOF
Usage: $(basename "$0") PACKAGE|SERVICE

Displays Android system metadata for a specific service or all services in a package.

Arguments:
  PACKAGE|SERVICE  The package name or service component name to inspect.

Options:
  --help           Display this help message and exit

Environment:
  ANDROID_SERIAL   Serial number of device to connect to (see 'adb devices -l').

Examples:
  $(basename "$0") com.google.android.wearable.healthservices
  $(basename "$0") com.google.android.gms/.gcm.GcmService
  $(basename "$0") com.google.android.gms/com.google.android.location.internal.GoogleLocationManagerService
  $(basename "$0") com.google.android.wearable.healthservices/.background.service.RecordingService
EOF
  exit 0
}

if [[ "$1" == "--help" ]]; then
  usage
fi

if [ -z "$1" ]; then
  usage 1 >&2
fi

require() {
  command -v "$1" >/dev/null 2>&1 || {
    echo >&2 "$(basename "$0"): $1 not found"
    exit 127
  }
}

require adb

adb exec-out dumpsys activity services "$1"
