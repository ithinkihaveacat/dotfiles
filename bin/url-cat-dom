#!/usr/bin/env bash

usage() {
  cat <<EOF
Usage: $(basename "$0") URL

Dumps the DOM of a URL using headless Google Chrome.

Arguments:
  URL         The URL to fetch and dump.

Options:
  --help      Display this help message and exit

Examples:
  $(basename "$0") https://example.com
EOF
  exit 0
}

if [[ "$1" == "--help" ]]; then
  usage
fi

if [ -z "$1" ]; then
  usage 1 >&2
fi

require() {
  command -v "$1" >/dev/null 2>&1 || {
    echo >&2 "$(basename "$0"): $1 not found"
    exit 127
  }
}

CHROME='/Applications/Google Chrome.app/Contents/MacOS/Google Chrome'

if [[ ! -x "$CHROME" ]]; then
  echo "$(basename "$0"): error: Google Chrome not found at $CHROME" >&2
  exit 127
fi

"$CHROME" --headless --dump-dom "$1" 2>/dev/null
