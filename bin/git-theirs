#!/usr/bin/env bash

usage() {
  cat <<EOF
Usage: $(basename "$0") FILE...

Resolves a Git merge conflict by keeping the "theirs" (remote) version of the files.

Arguments:
  FILE...     The files to resolve.

Options:
  --help      Display this help message and exit
EOF
  exit 0
}

if [[ "$1" == "--help" ]]; then
  usage
fi

if [ $# == 0 ]; then
  usage 1 >&2
fi

require() {
  command -v "$1" >/dev/null 2>&1 || {
    echo >&2 "$(basename "$0"): $1 not found"
    exit 127
  }
}

require git

git checkout --theirs "$@" && git add "$@"
