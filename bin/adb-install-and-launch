#!/usr/bin/env bash

require() { hash "$@" || exit 127; }

require adb
require apkanalyzer

if [ -z "$1" ] || [ ! -f "$1" ]; then
  echo "usage: $(basename "$0") <apk>"
  exit 1
fi

adb install -g -t -r "$1" && adb shell monkey -p "$(apkanalyzer manifest application-id "$1")" -c android.intent.category.LAUNCHER 1
