#!/usr/bin/env bash

usage() {
  cat <<EOF
Usage: $(basename "$0") APK_FILE

Extracts the Android Health Platform (AHP) client version from an APK.

The script supports both standalone APK files and ZIP archives containing a base split APK.

Arguments:
  APK_FILE    Path to an APK or a ZIP file containing a base split APK.

Options:
  -h, --help  Display this help message and exit

Examples:
  # Extract AHP version from a standalone APK
  $(basename "$0") /path/to/your/app.apk

  # Extract AHP version from a ZIP archive
  $(basename "$0") /path/to/your/app.zip
EOF
  exit 0
}

if [[ "$1" == "-h" || "$1" == "--help" ]]; then
  usage
fi

require() { hash "$@" || exit 127; }

require apkanalyzer
require unzip

if [ -z "$1" ]; then
  echo "$(basename "$0"): missing file operand" >&2
  exit 1
fi

if [[ $1 == *.zip ]]; then

  TMPDIR=$(mktemp -d)
  trap 'rm -rf -- "$TMPDIR"' EXIT

  unzip -q "$1" -d "$TMPDIR"
  TMP=("$TMPDIR"/*_base_split.apk)
  BASEAPK=${TMP[0]}

  if [ ! -f "${BASEAPK[0]}" ]; then
    echo "$(basename "$0"): *_base_split.apk not found in zip, aborting" >&2
    exit 1
  fi

else

  BASEAPK="$1"

fi

apkanalyzer files cat --file /META-INF/androidx.health.connect_connect-client.version "$BASEAPK"
