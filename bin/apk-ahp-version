#!/usr/bin/env bash

require() { hash "$@" || exit 127; }

require apkanalyzer
require unzip

if [ -z "$1" ]; then
  echo "usage: $(basename "$0") apk"
  exit 1
fi

if [[ $1 == *.zip ]]; then

  TMPDIR=$(mktemp -d)
  trap 'rm -rf -- "$TMPDIR"' EXIT

  unzip -q "$1" -d "$TMPDIR"
  APKS=("$TMPDIR"/*.apk)
  BASEAPK=("$TMPDIR"/*_base_split.apk)

  if [ ! -f "${BASEAPK[0]}" ]; then
    echo "error: *_base_split.apk not found in zip, aborting"
	exit 1
  fi

else

  BASEAPK="$1"

fi

apkanalyzer files cat --file /META-INF/androidx.health.connect_connect-client.version "$BASEAPK"
