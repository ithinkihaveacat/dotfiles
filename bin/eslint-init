#!/usr/bin/env bash

usage() {
  cat <<EOF
Usage: $(basename "$0")

Initializes a new .eslintrc.json file in the current directory.

This script installs 'eslint' and 'eslint-config-google' via npm,
then creates a .eslintrc.json file with a basic configuration.

This script will exit if a .eslintrc.json file already exists.

Examples:
  # Initialize eslint in the current directory.
  $(basename "$0")
EOF
  exit 0
}

if [[ "$1" == "-h" || "$1" == "--help" ]]; then
  usage
fi

require() { hash "$@" || exit 127; }

require npm

if [ -f .eslintrc.json ]; then
  echo "error: .eslintrc.json already exists, aborting"
  exit 1
fi

if [ ! -f package.json ]; then
  echo "error: package.json does not exist (run npm init)"
  exit 1
fi

# eslint needs to be installed locally for plugins to work:
# https://github.com/eslint/eslint/issues/1238
# (eslint --init also recommends this.)
npm install --save-dev eslint || exit 1
npm install --save-dev eslint-config-google || exit 1

cat <<ESLINTRC_JSON_END >.eslintrc.json
{
  "extends": "google",
  // http://eslint.org/docs/rules/
  "rules": {
    // "require-jsdoc": 0
  },
  // http://eslint.org/docs/user-guide/configuring#specifying-environments
  "env": {
    "es6": true
  }
}
ESLINTRC_JSON_END
