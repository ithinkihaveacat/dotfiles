#!/usr/bin/env bash

usage() {
  cat <<EOF
Usage: $(basename "$0") [PUBLIC_DIR]

Initializes a new Firebase project in the current directory.

This script creates a 'firebase.json' and a '.firebaserc' file, configuring
the project with the Firebase Project ID from the 'FIREBASE_PROJECT_ID'
environment variable. It also creates a default 'robots.txt' in the
public directory.

Arguments:
  PUBLIC_DIR  The directory to serve as the public root for Firebase
              Hosting. Defaults to the current directory.

This script will exit if 'firebase.json' or '.firebaserc' already exist.

Examples:
  # Initialize Firebase in the current directory.
  $(basename "$0")

  # Initialize Firebase with a 'public' directory.
  $(basename "$0") public
EOF
  exit 0
}

if [[ "$1" == "-h" || "$1" == "--help" ]]; then
  usage
fi

if [ -f firebase.json ]; then
  echo "error: firebase.json already exists, aborting"
  exit 1
fi

if [ -f .firebaserc ]; then
  echo "error: .firebaserc already exists, aborting"
  exit 1
fi

if [ "$FIREBASE_PROJECT_ID" = "" ]; then
  echo "error: FIREBASE_PROJECT_ID environment variable not set (run envrc-firebase)"
  exit 1
fi

PUBLIC=${1:-.}

mkdir -p "$PUBLIC"

# https://firebase.google.com/docs/hosting/full-config
cat << FIREBASE_JSON_END > firebase.json
{
  "hosting": {
    "public": "$PUBLIC",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ]
  }
}
FIREBASE_JSON_END

cat << FIREBASERC_END > .firebaserc
{
  "projects": {
    "default": "$FIREBASE_PROJECT_ID"
  }
}
FIREBASERC_END

cat << ROBOTS_TXT_END > "$PUBLIC/robots.txt"
User-agent: *
Disallow: /
ROBOTS_TXT_END
