#!/usr/bin/env bash

usage() {
  cat <<EOF
Usage: $(basename "$0") FIREBASE_PROJECT_ID [CUSTOM_URL]

Creates a .envrc file for a Firebase project and allows it via direnv.

Arguments:
  FIREBASE_PROJECT_ID  The ID of the Firebase project.
  CUSTOM_URL           Optional custom URL for the project.

Options:
  --help               Display this help message and exit

Examples:
  $(basename "$0") my-firebase-project
EOF
  exit 0
}

if [[ "$1" == "--help" ]]; then
  usage
fi

if [ $# == 0 ]; then
  usage 1 >&2
fi

require() {
  command -v "$1" >/dev/null 2>&1 || {
    echo >&2 "$(basename "$0"): $1 not found"
    exit 127
  }
}

require direnv
require firebase

FIREBASE_PROJECT_ID="$1"
FIREBASE_PROJECT_URL="${2:-https://${1}.firebaseapp.com}/"

if ! firebase projects:list | grep -q "$FIREBASE_PROJECT_ID"; then
  echo "$(basename "$0"): error: $FIREBASE_PROJECT_ID not a configured project (see firebase projects:list)" >&2
  exit 1
fi

cat <<END >.envrc
# Must be an id from "firebase projects:list"
export FIREBASE_PROJECT_ID=$1
export FIREBASE_PROJECT_URL=$FIREBASE_PROJECT_URL
END

echo "$(basename "$0"): created .envrc"
direnv allow
