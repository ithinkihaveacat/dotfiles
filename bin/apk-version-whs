#!/usr/bin/env bash

usage() {
  cat <<EOF
Usage: $(basename "$0") APK_FILE

Extracts the Wear Health Services (WHS) client version from an APK.

This script searches for 'whs.properties' or the 'health-services-client.version'
file within the APK and prints its content.

Arguments:
  APK_FILE    Path to an APK or a ZIP file containing a base split APK.

Options:
  -h, --help  Display this help message and exit

Examples:
  # Get the WHS version from a standalone APK
  $(basename "$0") /path/to/your/app.apk

  # Get the WHS version from a ZIP archive
  $(basename "$0") /path/to/your/app.zip
EOF
  exit 0
}

if [[ "$1" == "-h" || "$1" == "--help" ]]; then
  usage
fi

require() { hash "$@" || exit 127; }

require apkanalyzer
require unzip

if [ -z "$1" ]; then
  usage
fi

if [ ! -f "$1" ]; then
  echo "$(basename "$0"): $1: No such file or directory" >&2
  exit 1
fi

if [[ $1 == *.zip ]]; then
  TMPDIR=$(mktemp -d)
  trap 'rm -rf -- "$TMPDIR"' EXIT
  unzip -q -j "$1" '*-base-split.apk' -d "$TMPDIR"
  BASEAPKS=("$TMPDIR"/*-base-split.apk)
  BASEAPK="${BASEAPKS[0]}"
  if [ ! -f "$BASEAPK" ]; then
    echo "$(basename "$0"): *-base-split.apk not found in zip, aborting" >&2
    exit 1
  fi
else
  BASEAPK="$1"
fi

# The META-INF version is used from version beta01
VERSIONFILE=$(apkanalyzer files list "$BASEAPK" | grep -F -e "/whs.properties" -e "/META-INF/androidx.health_health-services-client.version")

apkanalyzer files cat --file "$VERSIONFILE" "$BASEAPK"
