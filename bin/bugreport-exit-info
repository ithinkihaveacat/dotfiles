#!/usr/bin/env bash

# Extracts process exit info from a bugreport
# May only work on Android 11+ devices

require() {
  hash "$@" || exit 127
}

require unzip
require perl

usage() {
  cat <<EOF
Usage: $(basename "$0") bugreport.zip

Extracts 'ACTIVITY MANAGER PROCESS EXIT INFO' from a bug report.

This information can be useful for debugging application crashes and ANRs.
Note: This may only be available on Android 11 and newer.

Arguments:
  bugreport.zip  A bug report zip file

Options:
  -h, --help     Display this help message and exit

Examples:
  # Extract process exit info from a bug report
  $(basename "$0") bugreport-2023-11-20.zip
EOF
  exit 0
}

if [[ "$1" == "-h" || "$1" == "--help" ]]; then
  usage
fi

if [ $# == 0 ]; then
  usage
fi

# Samsung devices seem to use dumpstate-*...
LOG=$(unzip -qql "$1" | cut -c 31- | grep -e dumpstate- -e dumpstate.txt -e bugreport-)

unzip -p "$1" "$LOG" | perl -ne 'print if /^ACTIVITY MANAGER PROCESS EXIT INFO/ .. /^$/'
