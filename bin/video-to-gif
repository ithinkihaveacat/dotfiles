#!/usr/bin/env bash

# References:
#
# https://github.com/rock3r/giffify/blob/master/giffify.sh

set -eo pipefail
shopt -s nullglob

usage() {
  cat <<EOF
Usage: $(basename "$0") FILE

Converts a video file to a high-quality GIF using ffmpeg.

Arguments:
  FILE        The input video file.

Options:
  --help      Display this help message and exit

Examples:
  $(basename "$0") recording.mp4
EOF
  exit 0
}

if [[ "$1" == "--help" ]]; then
  usage
fi

require() {
  command -v "$1" >/dev/null 2>&1 || {
    echo >&2 "$(basename "$0"): $1 not found"
    exit 127
  }
}

require ffmpeg

if [[ $# -ne 1 ]]; then
  usage 1 >&2
fi

if [[ ! -f "$1" ]]; then
  echo "$(basename "$0"): $1: No such file" >&2
  exit 1
fi

src="$1"
dst="${1%.*}.gif"

if [[ -e "$dst" ]]; then
  echo "$(basename "$0"): $dst already exists" >&2
  exit 1
fi

if ! palette=$(mktemp -t XXXXXXXXXXX.png); then
  echo "$(basename "$0"): can't create temporary file" >&2
  exit 1
fi

speed="1" # 2 is 2x speed, etc.
filters="fps=15,setpts=PTS/$speed,scale=640:-1:flags=lanczos"

ffmpeg -v warning -i "$src" -vf "$filters,palettegen" -y -f apng "$palette"
ffmpeg -v warning -i "$src" -i "$palette" -lavfi "$filters [x]; [x][1:v] paletteuse" -f gif "$dst"

echo "$(basename "$0"): created $dst"

rm -f "$palette"

exit 0
