#!/usr/bin/env bash

usage() {
  cat <<EOF
Usage: $(basename "$0")

Initializes a new tsconfig.json file in the current directory.

This script creates a tsconfig.json file with a basic configuration for
a Node.js project using the TypeScript compiler (tsc).

This script will exit if a tsconfig.json file already exists.

Examples:
  # Initialize a TypeScript project in the current directory.
  $(basename "$0")
EOF
  exit 0
}

if [[ "$1" == "-h" || "$1" == "--help" ]]; then
  usage
fi

TSCONFIG_JSON="tsconfig.json"

if [ -f $TSCONFIG_JSON ]; then
  echo "error: $TSCONFIG_JSON already exists, aborting"
  exit 1
fi

cat <<TSCONFIG_JSON_END >$TSCONFIG_JSON
{
  // https://www.typescriptlang.org/tsconfig
  "compilerOptions": {
    "strict": true
    "module": "commonjs",
    "target": "ES2019", // https://github.com/microsoft/TypeScript/wiki/Node-Target-Mapping
    "lib": ["ES2019"], // https://github.com/microsoft/TypeScript/wiki/Node-Target-Mapping
    "baseUrl": "./", // makes 'import xxx from "myfoo"' work
    "preserveWatchOutput": true,
    "listEmittedFiles": true
  },
  "exclude": ["node_modules"]
}
TSCONFIG_JSON_END
