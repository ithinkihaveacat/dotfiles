#!/usr/bin/env bash

# Extracts logcat from a bugreport

require() {
  hash "$@" || exit 127
}

require unzip
require perl

usage() {
  cat <<EOF
Usage: $(basename "$0") bugreport.zip

Extracts the 'SYSTEM LOG' section from a bug report.

This is equivalent to the output of 'adb logcat -d'.

Arguments:
  bugreport.zip  A bug report zip file

Options:
  -h, --help     Display this help message and exit

Examples:
  # Extract logcat from a bug report
  $(basename "$0") bugreport-2023-11-20.zip

  # Grep for a specific tag
  $(basename "$0") bugreport.zip | grep "MyCoolTag"
EOF
  exit 0
}

if [[ "$1" == "-h" || "$1" == "--help" ]]; then
  usage
fi

if [ $# == 0 ]; then
  echo "$(basename "$0"): missing file operand" >&2
  exit 1
fi

# Samsung devices seem to use dumpstate-*...
LOG=$(unzip -qql "$1" | cut -c 31- | grep -e dumpstate- -e dumpstate.txt -e bugreport- | grep txt)

unzip -p "$1" "$LOG" | perl -ne 'print if /^------ SYSTEM LOG/ .. /^------ EVENT LOG/'
