#!/usr/bin/env bash

usage() {
  cat <<EOF
Usage: $(basename "$0") PACKAGE

Launches an application.

This script is a convenient wrapper around 'adb shell monkey' to launch the
main activity of an application.

Arguments:
  PACKAGE     Android package name (e.g., com.example.app)

Options:
  -h, --help  Display this help message and exit

Environment:
  ANDROID_SERIAL  Serial number of device to connect to (see 'adb devices -l').
                  To target a specific device, use:
                    env ANDROID_SERIAL=<serial> $(basename "$0")

Examples:
  # Launch the System UI
  $(basename "$0") com.android.systemui

  # Launch a specific app
  $(basename "$0") com.google.android.apps.photos
EOF
  exit 0
}

if [[ "$1" == "-h" || "$1" == "--help" ]]; then
  usage
fi

require() { hash "$@" || exit 127; }

require adb

if [ -z "$1" ]; then
  usage
fi

# --pct-syskeys via https://stackoverflow.com/a/46935037
adb exec-out monkey --pct-syskeys 0 -p "$1" -c android.intent.category.LAUNCHER 1
