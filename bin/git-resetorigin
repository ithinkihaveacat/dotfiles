#!/usr/bin/env bash

usage() {
  cat <<EOF
Usage: $(basename "$0")

Hard resets the current branch to match its corresponding branch on origin.

Options:
  --help      Display this help message and exit
EOF
  exit 0
}

if [[ "$1" == "--help" ]]; then
  usage
fi

require() {
  command -v "$1" >/dev/null 2>&1 || {
    echo >&2 "$(basename "$0"): $1 not found"
    exit 127
  }
}

require git

git reset --hard origin/"$(git rev-parse --abbrev-ref HEAD)"
