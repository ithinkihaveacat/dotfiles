#!/usr/bin/env bash

# Works great on AVI files captured from simple kids cameras

set -eo pipefail

usage() {
  cat <<EOF
Usage: $(basename "$0") FILE...

Converts video files to H.265 (HEVC) format using macOS hardware acceleration.

Arguments:
  FILE...     One or more video files to convert.

Options:
  --help      Display this help message and exit

Examples:
  $(basename "$0") video.avi
  $(basename "$0") *.mov
EOF
  exit 0
}

if [[ "$1" == "--help" ]]; then
  usage
fi

if [ "$#" -eq 0 ]; then
  usage 1 >&2
fi

require() {
  command -v "$1" >/dev/null 2>&1 || {
    echo >&2 "$(basename "$0"): $1 not found"
    exit 127
  }
}

require ffmpeg

for f in "$@"; do

  if [ ! -f "$f" ]; then
    echo "$(basename "$0"): error: file not found: $f" >&2
    continue
  fi

  output_path="$(dirname "$f")/$(basename "${f%.*}").mp4"

  if [ "$f" == "$output_path" ]; then
    echo "$(basename "$0"): warning: skipping $f" >&2
    continue
  fi

  ffmpeg -i "$f" -c:v hevc_videotoolbox -q:v 40 -pix_fmt yuv420p -tag:v hvc1 -c:a aac -b:a 96k -movflags +faststart "$output_path"

  echo "$(basename "$0"): converted $f to $output_path"

done
