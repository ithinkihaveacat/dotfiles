#!/usr/bin/env bash

# Extracts Exposure Notification service info from a bugreport

require() {
  hash "$@" || exit 127
}

require unzip
require perl

usage() {
  cat <<EOF
Usage: $(basename "$0") bugreport.zip

Extracts the 'ExposureNotificationInternalService' service dump from a bug report.

Arguments:
  bugreport.zip  A bug report zip file

Options:
  -h, --help     Display this help message and exit

Examples:
  # Extract EN service info from a bug report
  $(basename "$0") bugreport-2023-11-20.zip
EOF
  exit 0
}

if [[ "$1" == "-h" || "$1" == "--help" ]]; then
  usage
fi

if [ $# == 0 ]; then
  usage
fi

# Samsung devices seem to use dumpstate-*...
LOG=$(unzip -qql "$1" | cut -c 31- | grep -e dumpstate- -e dumpstate.txt -e bugreport-)

unzip -p "$1" "$LOG" | perl -ne 'print if /^SERVICE com.google.android.gms\/.nearby.exposurenotification.service.ExposureNotificationInternalService/ .. /^$/'
