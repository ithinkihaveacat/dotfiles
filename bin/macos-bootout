#!/usr/bin/env bash

usage() {
  cat <<EOF
Usage: $(basename "$0") USER

Logs out the specified user using 'launchctl bootout'.

Arguments:
  USER        Username or User ID (UID) of the user to log out.

Options:
  -h, --help  Display this help message and exit

Examples:
  $(basename "$0") mjs
  $(basename "$0") 501

This script requires sudo privileges to execute the bootout command.
EOF
  exit 0
}

if [[ "$1" == "-h" || "$1" == "--help" ]]; then
  usage
fi

require() { hash "$@" || exit 127; }

require id
require launchctl
require sudo

if [ -z "$1" ]; then
  echo "$(basename "$0"): missing operand" >&2
  exit 1
fi

# Resolve input to UID. 'id -u' works for both usernames and UIDs on macOS.
if ! TARGET_UID=$(id -u "$1" 2>/dev/null); then
  echo "$(basename "$0"): user '$1' not found" >&2
  exit 1
fi

sudo launchctl bootout "gui/$TARGET_UID"
