#!/usr/bin/env bash

usage() {
  cat <<EOF
Usage: $(basename "$0") COMPONENT_NAME

Adds a tile provided by COMPONENT_NAME.

Arguments:
  COMPONENT_NAME  A string composed of the package name and a class in that
                  package, for example:
                  com.example.wear.tiles/com.example.wear.tiles.PreviewTileService

Options:
  -h, --help      Display this help message and exit

Examples:
  $(basename "$0") com.google.android.wearable.shell/.weather.WeatherTileService
EOF
  exit 0
}

if [[ "$1" == "-h" || "$1" == "--help" ]]; then
  usage
fi

if [ -z "$1" ]; then
  usage
fi

require() { hash "$@" || exit 127; }

require adb

adb shell am broadcast -a com.google.android.wearable.app.DEBUG_SURFACE --es operation add-tile --ecn component "$1"
