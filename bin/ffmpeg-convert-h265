#!/usr/bin/env bash

# Works great on AVI files captured from simple kids cameras

set -e

if [ "$#" -eq 0 ]; then
  echo "usage: $(basename "$0") <file1> [<file2> ...]" >&2
  exit 1
fi

for f in "$@"; do

  if [ ! -f "$f" ]; then
    echo "error: file not found: $f" >&2
    continue
  fi

  output_path="$(dirname "$f")/$(basename "${f%.*}").mp4"

  if [ "$f" == "$output_path" ]; then
    echo "warning: skipping $f"
    continue
  fi

  ffmpeg -i "$f" -c:v hevc_videotoolbox -q:v 40 -pix_fmt yuv420p -tag:v hvc1 -c:a aac -b:a 96k -movflags +faststart "$output_path"

  echo "Converted $f to $output_path"

done
