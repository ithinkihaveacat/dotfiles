#!/usr/bin/env bash

usage() {
  cat <<EOF
Usage: $(basename "$0") PACKAGE

Displays the dex optimization status for a given package.

This script is useful for checking the compilation status of an Android application,
which can impact its performance. For example, you can verify if a baseline profile
has been correctly applied.

Arguments:
  PACKAGE     Android package name (e.g., com.example.app)

Options:
  -h, --help  Display this help message and exit

Examples:
  # Check the status of the System UI
  $(basename "$0") com.android.systemui

  # Verify the profile status for a specific app
  $(basename "$0") com.google.android.apps.photos

  # Monitor the optimization status of an app during a benchmark run
  watch -n 5 "$(basename "$0") com.example.app"
EOF
  exit 0
}

if [[ "$1" == "-h" || "$1" == "--help" ]]; then
  usage
fi

require() { hash "$@" || exit 127; }

require adb

if [ -z "$1" ]; then
  echo "$(basename "$0"): missing package name operand" >&2
  exit 1
fi

adb exec-out dumpsys package dexopt | grep -A 1 "$1"
