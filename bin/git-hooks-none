#!/usr/bin/env bash

usage() {
  cat <<EOF
Usage: $(basename "$0")

Removes all git hooks from the current repository.

Options:
  --help      Display this help message and exit
EOF
  exit 0
}

if [[ "$1" == "--help" ]]; then
  usage
fi

require() {
  command -v "$1" >/dev/null 2>&1 || {
    echo >&2 "$(basename "$0"): $1 not found"
    exit 127
  }
}

require git

git rev-parse --git-dir >/dev/null 2>&1 || {
  echo "$(basename "$0"): error: not a git repository" >&2
  exit 1
}
rm -rf "$(git rev-parse --git-dir)/hooks"
