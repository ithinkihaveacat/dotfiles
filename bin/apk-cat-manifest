#!/usr/bin/env bash

require() { hash "$@" || exit 127; }

require apkanalyzer
require unzip
require xmllint

if [ -z "$1" ]; then
  echo "usage: $(basename "$0") apk"
  exit 1
fi

if [[ $1 == *.zip ]]; then

  TMPDIR=$(mktemp -d)
  trap 'rm -rf -- "$TMPDIR"' EXIT

  unzip -q "$1" -d "$TMPDIR"
  TMP=("$TMPDIR"/*_base_split.apk)
  BASEAPK=${TMP[0]}

  if [ ! -f "${BASEAPK[0]}" ]; then
    echo "error: *_base_split.apk not found in zip, aborting"
    exit 1
  fi

else

  BASEAPK="$1"

fi

apkanalyzer manifest print "$BASEAPK" | xmllint --format -
