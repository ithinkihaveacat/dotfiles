#!/usr/bin/env bash

if [ $# == 0 ]; then
  echo "usage: $(basename "$0") gae_app_id [url] # see https://console.developers.google.com/project"
  exit 1
fi

require() { hash "$@" || exit 127; }

require direnv

cat <<END >.envrc
export GAE_APP_ID=$1
export GAE_URL=$2
END

echo "$(basename "$0"): created .envrc"
direnv allow
