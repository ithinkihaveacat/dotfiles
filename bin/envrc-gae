#!/usr/bin/env bash

usage() {
  cat <<EOF
Usage: $(basename "$0") GAE_APP_ID [URL]

Creates a .envrc file for a Google App Engine project and allows it via direnv.

Arguments:
  GAE_APP_ID  The ID of the GAE application.
  URL         Optional URL for the application.

Options:
  --help      Display this help message and exit

Examples:
  $(basename "$0") my-gae-app
EOF
  exit 0
}

if [[ "$1" == "--help" ]]; then
  usage
fi

if [ $# == 0 ]; then
  usage 1 >&2
fi

require() {
  command -v "$1" >/dev/null 2>&1 || {
    echo >&2 "$(basename "$0"): $1 not found"
    exit 127
  }
}

require direnv

cat <<END >.envrc
export GAE_APP_ID=$1
export GAE_URL=$2
END

echo "$(basename "$0"): created .envrc"
direnv allow
