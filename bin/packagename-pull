#!/usr/bin/env bash

usage() {
  cat <<EOF
Usage: $(basename "$0") PACKAGE

Pulls the APK file of a given package from the device.

This script is useful for backing up an application or for analyzing it
locally.

Arguments:
  PACKAGE     Android package name (e.g., com.example.app)

Options:
  -h, --help  Display this help message and exit

Environment:
  ANDROID_SERIAL  Serial number of device to connect to (see 'adb devices -l').
                  To target a specific device, use:
                    env ANDROID_SERIAL=<serial> $(basename "$0")

Examples:
  # Pull the APK of the System UI
  $(basename "$0") com.android.systemui

  # Pull the APK of a specific app
  $(basename "$0") com.google.android.apps.photos
EOF
  exit 0
}

if [[ "$1" == "-h" || "$1" == "--help" ]]; then
  usage
fi

require() { hash "$@" || exit 127; }

require adb

if [ -z "$1" ]; then
  usage
fi

# Get the path of the first (assume base) APK on the device
APK_PATH=$(adb exec-out pm path "$1" | head -1 | cut -f 2 -d ':')

if [ -z "$APK_PATH" ]; then
  echo "$(basename "$0"): $1 not found on device" >&2
  exit 1
fi

adb pull "$APK_PATH" "$(printf "%s.apk" "$1")"
