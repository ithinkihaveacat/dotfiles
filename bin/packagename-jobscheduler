#!/usr/bin/env bash

usage() {
  cat <<EOF
Usage: $(basename "$0") PACKAGE

Dumpsys jobscheduler information for a given package.

This script is a convenient wrapper around 'adb dumpsys jobscheduler' to get
detailed information about the jobs scheduled by an application.

Arguments:
  PACKAGE     Android package name (e.g., com.example.app)

Options:
  -h, --help  Display this help message and exit

Environment:
  ANDROID_SERIAL  Serial number of device to connect to (see 'adb devices -l').
                  To target a specific device, use:
                    env ANDROID_SERIAL=<serial> $(basename "$0")

Examples:
  # Get jobscheduler information for the System UI
  $(basename "$0") com.android.systemui

  # Get jobscheduler information for a specific app
  $(basename "$0") com.google.android.apps.photos
EOF
  exit 0
}

if [[ "$1" == "-h" || "$1" == "--help" ]]; then
  usage
fi

require() { hash "$@" || exit 127; }

require adb

if [ -z "$1" ]; then
  usage
fi

adb exec-out dumpsys jobscheduler "$1" | perl -ne 'print if (/  JOB/ .. /^$/) || (/  Job history/ .. /^$/)'
