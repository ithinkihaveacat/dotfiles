#!/usr/bin/env bash

usage() {
  cat <<EOF
Usage: $(basename "$0") APK_FILE

Extracts the path of the base split APK from a ZIP archive.

If the provided file is not a ZIP, the script will return the original file path.

Arguments:
  APK_FILE    Path to a ZIP file containing a base split APK.

Options:
  -h, --help  Display this help message and exit

Examples:
  # Extract the base split APK path from a ZIP archive
  $(basename "$0") /path/to/your/app.zip

  # If not a ZIP, it returns the same path
  $(basename "$0") /path/to/your/app.apk
EOF
  exit 0
}

if [[ "$1" == "-h" || "$1" == "--help" ]]; then
  usage
fi

require() { hash "$@" || exit 127; }

require unzip

if [ -z "$1" ]; then
  echo "$(basename "$0"): missing file operand" >&2
  exit 1
fi

if [[ $1 == *.zip ]]; then

  TMPDIR=$(mktemp -d)
  trap 'rm -rf -- "$TMPDIR"' EXIT

  unzip -q "$1" -d "$TMPDIR"
  BASEAPK=$(directory-base-split "$TMPDIR")

  if [ ! -f "$BASEAPK" ]; then
    echo "$(basename "$0"): *_base_split.apk not found in zip, aborting" >&2
    exit 1
  fi

else

  BASEAPK="$1"

fi

echo "$BASEAPK"
