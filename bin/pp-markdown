#!/usr/bin/env bash

usage() {
  cat <<EOF
Usage: $(basename "$0") < INPUT_FILE

Pretty-prints GitHub Flavored Markdown (GFM) content from stdin using pandoc.

Options:
  --help      Display this help message and exit

Examples:
  cat README.md | $(basename "$0")
EOF
  exit 0
}

if [[ "$1" == "--help" ]]; then
  usage
fi

require() {
  command -v "$1" >/dev/null 2>&1 || {
    echo >&2 "$(basename "$0"): $1 not found"
    exit 127
  }
}

require pandoc

pandoc -f gfm -t markdown
