#!/usr/bin/env bash

usage() {
  cat <<EOF
Usage: $(basename "$0") PACKAGE

Opens the settings page for a given package.

This script is a convenient wrapper around 'adb shell am start' to open the
application details settings page for an application.

Arguments:
  PACKAGE     Android package name (e.g., com.example.app)

Options:
  -h, --help  Display this help message and exit

Examples:
  # Open the settings page for a specific app
  $(basename "$0") com.google.android.apps.photos
EOF
  exit 0
}

if [[ "$1" == "-h" || "$1" == "--help" ]]; then
  usage
fi

require() { hash "$@" || exit 127; }

require adb

if [ -z "$1" ]; then
  echo "$(basename "$0"): missing package name operand" >&2
  exit 1
fi

adb shell am start -a android.settings.APPLICATION_DETAILS_SETTINGS -d "package:$1"
