#!/usr/bin/env bash

usage() {
  cat <<EOF
Usage: $(basename "$0") APK_FILE FILE_PATH

Extracts and displays a file from an Android APK or app bundle.

The script supports both standalone APKs and ZIP archives containing split APKs.
It automatically formats XML files for readability.

Arguments:
  APK_FILE    Path to an APK file or ZIP archive.
  FILE_PATH   Path to the file within the APK to extract.

Options:
  --help  Display this help message and exit

Examples:
  # Extract AndroidManifest.xml from an APK
  $(basename "$0") app.apk AndroidManifest.xml

  # Extract a layout file from an APK
  $(basename "$0") app.apk res/layout/activity_main.xml

  # Extract classes.dex from a ZIP archive
  $(basename "$0") app-bundle.zip classes.dex
EOF
  exit 0
}

if [[ "$1" == "--help" ]]; then
  usage
fi

require() {
  command -v "$1" >/dev/null 2>&1 || {
    echo >&2 "$(basename "$0"): $1 not found"
    exit 127
  }
}

require apkanalyzer
require unzip
require xmllint

if [ $# -ne 2 ]; then
  usage
fi

if [ ! -f "$1" ]; then
  echo "$(basename "$0"): $1: No such file or directory" >&2
  exit 1
fi

if [[ $1 == *.zip ]]; then
  TMPDIR=$(mktemp -d)
  trap 'rm -rf -- "$TMPDIR"' EXIT
  unzip -q -j "$1" '*-base-split.apk' -d "$TMPDIR"
  BASEAPKS=("$TMPDIR"/*-base-split.apk)
  BASEAPK="${BASEAPKS[0]}"
  if [ ! -f "$BASEAPK" ]; then
    echo "$(basename "$0"): *-base-split.apk not found in zip, aborting" >&2
    exit 1
  fi
else
  BASEAPK="$1"
fi

if [[ $2 == *.xml ]]; then
  apkanalyzer resources xml --file "$2" "$BASEAPK" | xmllint --format -
else
  apkanalyzer files cat --file "$2" "$BASEAPK"
fi
