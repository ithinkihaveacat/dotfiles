#!/usr/bin/env bash

usage() {
  cat <<EOF
Usage: $(basename "$0") APK_FILE

Decodes an APK file using apktool and outputs the temporary directory path.

This script uses 'apktool d' to decode the APK's resources into a temporary directory.
The path to this directory is printed to standard output.

Arguments:
  APK_FILE    Path to an APK file.

Options:
  -h, --help  Display this help message and exit

Examples:
  # Decode an APK and get the temporary directory path
  DECODED_PATH=$(basename "$0" /path/to/your/app.apk)
  ls "$DECODED_PATH"
EOF
  exit 0
}

if [[ "$1" == "-h" || "$1" == "--help" ]]; then
  usage
fi

require() { hash "$@" || exit 127; }

require apktool

if [ -z "$1" ]; then
  echo "$(basename "$0"): missing file operand" >&2
  exit 1
fi

TMPDIR=$(mktemp -d)

# -s to skip source (resources only)
apktool d "$1" -f -o "$TMPDIR" >/dev/null 2>&1

echo "$TMPDIR"
