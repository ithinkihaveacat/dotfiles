#!/usr/bin/env bash

usage() {
  cat <<EOF
Usage: $(basename "$0") PACKAGE

Gets the version name and code of a given package.

This script is a convenient wrapper around 'adb dumpsys package' to extract
the version information of an application.

Arguments:
  PACKAGE     Android package name (e.g., com.example.app)

Options:
  -h, --help  Display this help message and exit

Examples:
  # Get the version of the System UI
  $(basename "$0") com.android.systemui

  # Get the version of a specific app
  $(basename "$0") com.google.android.apps.photos
EOF
  exit 0
}

if [[ "$1" == "-h" || "$1" == "--help" ]]; then
  usage
fi

require() { hash "$@" || exit 127; }

require adb

if [ -z "$1" ]; then
  usage
fi

# Check if package is installed
if ! adb shell pm list packages | grep -q "^package:${1}$"; then
  echo "$(basename "$0"): package '$1' not found" >&2
  exit 1
fi

printf "packageName=%s\n" "$1"
adb exec-out dumpsys package "$1" | sed -n '/^Packages/,/^Hidden system packages/p' | grep versionName | awk '{ print $1 }'
adb exec-out dumpsys package "$1" | sed -n '/^Packages/,/^Hidden system packages/p' | grep versionCode | awk '{ print $1 }'
adb exec-out dumpsys package "$1" | sed -n '/^Hidden system packages/,/^Queries/p' | grep versionName | awk '{ print $1 }'
adb exec-out dumpsys package "$1" | sed -n '/^Hidden system packages/,/^Queries/p' | grep versionCode | awk '{ print $1 }'
