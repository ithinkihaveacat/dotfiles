#!/usr/bin/env bash

# See ~/.gitconfig for push-gerrit alias.

usage() {
  cat <<EOF
Usage: $(basename "$0")

Downloads and installs the Gerrit commit-msg hook for the current repository.

Options:
  --help      Display this help message and exit
EOF
  exit 0
}

if [[ "$1" == "--help" ]]; then
  usage
fi

require() {
  command -v "$1" >/dev/null 2>&1 || {
    echo >&2 "$(basename "$0"): $1 not found"
    exit 127
  }
}

require git
require curl

git rev-parse --git-dir >/dev/null 2>&1 || {
  echo "$(basename "$0"): error: not a git repository" >&2
  exit 1
}
mkdir -p "$(git rev-parse --git-dir)/hooks" || exit 1
curl -sSLo "$(git rev-parse --git-dir)/hooks/commit-msg" https://gerrit-review.googlesource.com/tools/hooks/commit-msg || exit 1
chmod +x "$(git rev-parse --git-dir)/hooks/commit-msg"
