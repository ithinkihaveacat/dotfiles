#!/usr/bin/env bash

usage() {
  cat <<EOF
Usage: $(basename "$0")

Creates a .envrc file with Git author environment variables and allows it via direnv.

Options:
  --help      Display this help message and exit
EOF
  exit 0
}

if [[ "$1" == "--help" ]]; then
  usage
fi

require() {
  command -v "$1" >/dev/null 2>&1 || {
    echo >&2 "$(basename "$0"): $1 not found"
    exit 127
  }
}

require direnv

cat <<END >.envrc
export GIT_AUTHOR_NAME="Michael Stillwell"
export GIT_AUTHOR_EMAIL="mjs@beebo.org"
END

echo "$(basename "$0"): created .envrc"
direnv allow
