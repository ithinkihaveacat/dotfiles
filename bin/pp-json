#!/usr/bin/env bash

usage() {
  cat <<EOF
Usage: $(basename "$0") < INPUT_FILE

Pretty-prints JSON content from stdin using python3's json.tool.

Options:
  --help      Display this help message and exit

Examples:
  cat data.json | $(basename "$0")
EOF
  exit 0
}

if [[ "$1" == "--help" ]]; then
  usage
fi

require() {
  command -v "$1" >/dev/null 2>&1 || {
    echo >&2 "$(basename "$0"): $1 not found"
    exit 127
  }
}

require python3

python3 -mjson.tool
