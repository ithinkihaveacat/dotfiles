#!/usr/bin/env bash

usage() {
  cat <<EOF
Usage: $(basename "$0") PACKAGE

Lists the tiles of a given package.

This script is useful for inspecting the tiles provided by a Wear OS
application.

Arguments:
  PACKAGE     Android package name (e.g., com.example.app)

Options:
  -h, --help  Display this help message and exit

Examples:
  # List tiles for a specific watch face
  $(basename "$0") com.google.android.wearable.app
EOF
  exit 0
}

if [[ "$1" == "-h" || "$1" == "--help" ]]; then
  usage
fi

require() { hash "$@" || exit 127; }

require adb

if [ -z "$1" ]; then
  usage
fi

#adb exec-out dumpsys wear_service | grep -E "^\s+TileProvider" | grep -E $(printf "ComponentInfo{%s/" "$1")

adb shell cmd package query-services -a androidx.wear.tiles.action.BIND_TILE_PROVIDER --brief | grep -E "\s+$1" | sed 's/^[[:space:]]*//' | sort
